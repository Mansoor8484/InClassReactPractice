<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
         prefHeight="40.0" prefWidth="1200.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">
    <HBox alignment="CENTER_LEFT" prefHeight="32.0" spacing="50.0" HBox.hgrow="ALWAYS">
        <Button mnemonicParsing="false" onMouseClicked="#onOverviewClick" style="-fx-background-color: #DFF0D8;"
                text="Overview" textFill="#3b3b3b">
            <font>
                <Font name="System Bold" size="14.0"  />
            </font>
        </Button>
        <Button mnemonicParsing="false" onMouseClicked="#onTransactionsClick" style="-fx-background-color: #DFF0D8;"
                text="Transactions" textFill="#3b3b3b">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onMouseClicked="#onBudgetingClick" style="-fx-background-color: #DFF0D8;"
                text="Budgeting" textFill="#3b3b3b">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Button>
        <Button mnemonicParsing="false" onMouseClicked="#onSecurityClick" style="-fx-background-color: #DFF0D8;"
                text="Security" textFill="#3b3b3b">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <HBox.margin>
            <Insets />
        </HBox.margin>
    </HBox>
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
        <MenuButton mnemonicParsing="false" text="Settings" style="-fx-background-color: #DFF0D8;" textFill="#3b3b3b">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#onNotificationSettingsClick"
                          text="Change Notification Settings" />
                <MenuItem mnemonicParsing="false" onAction="#onActivityClick" text="Recent Account Activity" />
                <MenuItem mnemonicParsing="false" onAction="#onSignOutClick" text="Sign Out" />
            </items>
        </MenuButton>
    </VBox>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>
</fx:root>
