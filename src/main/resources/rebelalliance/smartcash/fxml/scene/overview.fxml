<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="rebelalliance.smartcash.controller.scene.OverviewController">
    <VBox fx:id="header" prefHeight="40.0" prefWidth="1200.0" />
    <Text fill="#b4dcb0" layoutX="14.0" layoutY="88.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome!"
          fx:id="welcomeText">
        <font>
            <Font name="System Bold" size="36.0" />
        </font>
    </Text>
    <VBox fx:id="accountsBox" layoutX="14.0" layoutY="113.0" prefHeight="400.0" prefWidth="300.0" spacing="10" />
    <PieChart fx:id="compositionPieChart" labelLineLength="0" layoutX="314.0" layoutY="108.0" prefHeight="273.0"
              prefWidth="369.0" title="Account Composition" />
    <LineChart fx:id="historicalLineChart" layoutX="689.0" layoutY="104.0" prefHeight="400.0" prefWidth="497.0"
               title="Accounts Over Time">
        <xAxis>
            <NumberAxis fx:id="historicalLineChartXAxis" side="BOTTOM" />
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT" />
        </yAxis>
    </LineChart>
    <PieChart fx:id="spendPieChart" labelLineLength="0" layoutX="314.0" layoutY="423.0" prefHeight="273.0"
              prefWidth="369.0" title="Spend" />
</AnchorPane>
